#include<stdio.h>
#include<stdlib.h>

// Step 5 : Perform the operation on array
void DisplayEvenOdd(int Arr[], int iSize)
{
    int iCnt =0, iEvenCnt = 0, iOddCnt = 0, eSum = 0, oSum = 0;

    for(iCnt = 0; iCnt < iSize; iCnt++)
    {
        if((Arr[iCnt] % 2) == 0)
        {
            iEvenCnt++;
			eSum = eSum + iEvenCnt;
        }
		else
		{
			iOddCnt ++;
			oSum = oSum + iOddCnt;
		}
    }
	
	    printf("Number of even elements are : %d\n",iEvenCnt);
		printf("Addition of even  : %d\n",eSum);
		
		printf("Number of odd elements are : %d\n",iOddCnt);
		printf("Addition of odd  : %d\n",oSum);

    
}

int main()
{
    int *ptr = NULL;
    int iLength = 0, i = 0, iRet = 0;

    // Step 1 : Accept size of array
    printf("Enter number of elements : \n");
    scanf("%d",&iLength);

    // Step 2 : Allocate memory for array
    ptr = (int *)malloc(iLength * sizeof(int));

    // Step 3 : Accept the elements of array
    printf("Enter the elements : \n");

    for(i = 0 ;i < iLength; i++)
    {
        scanf("%d",&ptr[i]);
    }

    // Step 4 : Call the function
    DisplayEvenOdd(ptr, iLength);

    // Step 6 : Deallocate the memory
    free(ptr);

    return 0;
}